{
  "name": "workout_app",
  "description": "App for some workout exercises",
  "version": "1.0.0",
  "main": "back/server.js",
  "type": "module",
  "scripts": {
		"server": "nodemon server/server",
		"server-start": "node server/server",
		"start": "concurrently \"npm run server-start\" \"npm run start --prefix client\"",
		"dev": "concurrently \"npm run server\" \"npm run start --prefix client\"",
		"build": "cd client && npm run build",
		"install-client": "cd client && npm install",
		"heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix client && npm run build --prefix client"
  },
  "repository": {
    "url": "git+https://github.com/Zh3kka/workout_app.git"
  },
  "author": "Evgenii",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Zh3kka/workout_app/issues"
  },
  "homepage": "https://github.com/Zh3kka/workout_app#readme",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "express-async-handler": "^1.2.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.3.4"
  },
  "devDependencies": {
    "colors": "^1.4.0",
    "concurrently": "^7.2.1",
    "morgan": "^1.10.0",
    "nodemon": "^2.0.16"
  }
}
